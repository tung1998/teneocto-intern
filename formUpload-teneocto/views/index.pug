extends layout

block content
  h1 FORM UPLOAD PRODUCT
  div#Form(class="col-sm-8")
    table(class="table table-hover")
      tbody
        tr.row
          td.col-sm-4(class="product-infor-menu") Name:
          td.col-sm-8
            input#Name.product-input-data(name="productName")
        tr.row
          td.col-sm-4.product-infor-menu Category:
          td.col-sm-8
            select#Category.product-input-data(name="Category")
              option smartphone
              option tablet
              option laptop
        tr.row
          td.col-sm-4.product-infor-menu Description:
          td.col-sm-8
            input#Description.product-input-data(name="Description")
        tr.row
          td.col-sm-4.product-infor-menu Price:
          td.col-sm-8
            input#Price.product-input-data(name="Price")
        tr.row
          td.col-sm-4.product-infor-menu Picture:
          td.col-sm-8
            input#Picture.product-input-data(name="Picture" type="file")
    hr
    div.form-group
      button#Button(class="btn btn-primary" onclick="javascript:uploadData()") ADD
  h1 DATA MANAGER
  div#Data.container-fluid
    table.table.table-hover
      thead
        tr.d-flex.col-md-12.row
          th.col-md-2 Picture
          th.col-md-2 Name
          th.col-md-4 Description
          th.col-md-1 Category
          th.col-md-1 Price
          th.col-md-2 Active
      tbody#Data-row




